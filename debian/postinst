#!/bin/sh
# postinst script for wasta-logos-installer
#
# see: dh_installdeb(1)

set -e

case "$1" in
    configure)
        # Call main postinst script.  Error in that script should NOT stop
        #   postinst from completing.  We want to ensure that the package
        #   installs even if the script fails.
        #   If not, later updates to package won't install either because
        #   the broken version will attempt to keep installing until manually
        #   uninstalled.
        DIR=/opt/wasta-logos-installer
        echo
        echo "*** Merging Logos-x86.msi installer pieces"
        echo
        cat $DIR/Logos-x86-* > $DIR/Logos-x86.msi
        cd $DIR
        md5sum -c Logos-x86.msi.md5
        OUTNUM=$?
        if [ "$OUTNUM" -eq 0 ];
        then
            echo
            echo "*** md5 Logos-x86.msi matches"
            echo
            rm $DIR/Logos-x86-*
        else
            echo
            echo "*** ERROR: md5 Logos-x86.msi did not match"
            echo
        fi
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
